<form method="POST" action="/recipes/<%=@recipe.id%>">
<input type="hidden" name="_method" value="patch">
<label for "name">Name:</label>
<input type="text" name="name" value=<%=@recipe.name%> ></input>
<label for "ingredients">Ingredients:</label>
<input type="text" name="ingredients" value=<%=@recipe.ingredients%>></input>
<label for "cook_time">Cook_Time:</label>
<input type="text" name="cook_time" value=<%=@recipe.cook_time%>></input>
<button type="submit" >Submit</button>
</form>